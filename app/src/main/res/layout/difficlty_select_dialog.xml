<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optionBack"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/optionbackcroped"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/workbench_regular"
        android:gravity="center"
        android:text="New Game"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/easyMode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/difficulty_mode_icon_background"
                android:src="@drawable/easy_mode" />

            <TextView
                android:id="@+id/easyText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/workbench_regular"
                android:text="Easy"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mediumMode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/difficulty_mode_icon_background"
                android:src="@drawable/medium_mode" />

            <TextView
                android:id="@+id/mediumText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/workbench_regular"
                android:text="Medium"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hardMode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/difficulty_mode_icon_background"
                android:src="@drawable/hard_mode" />

            <TextView
                android:id="@+id/hardText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/workbench_regular"
                android:text="Hard"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expertMode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/difficulty_mode_icon_background"
                android:src="@drawable/expert_mode" />

            <TextView
                android:id="@+id/expertText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/workbench_regular"
                android:text="Expert"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nightmareMode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/difficulty_mode_icon_background"
                android:src="@drawable/nightmer_mode" />

            <TextView
                android:id="@+id/nightmareText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/workbench_regular"
                android:text="Nightmare"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>